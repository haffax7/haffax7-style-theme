{{!-- 이 템플릿은 리스트의 한 줄(Row)을 정의합니다 --}}
<tr data-topic-id="{{topic.id}}" class="topic-list-item">
  
  {{!-- 1. 왼쪽: 아바타 전용 칸 --}}
  <td class="haffax-avatar-cell">
    <div class="poster-avatar">
      <a href="{{topic.lastPostUrl}}" data-user-card="{{topic.last_poster_username}}">
        {{avatar topic.lastPosterUser imageSize="40"}}
      </a>
    </div>
  </td>

  {{!-- 2. 가운데: 제목 + 카테고리 + 시간 --}}
  <td class="main-link clearfix">
    <div class="link-middle-container">
      {{!-- 제목 --}}
      <div class="topic-title-area">
        {{raw "list/topic-list-title" topic=topic}}
      </div>
      
      {{!-- 메타 정보: 카테고리 | 시간 --}}
      <div class="topic-meta-area">
        {{category-link topic.category}}
        <span class="light-textish">
          <a href="{{topic.lastPostUrl}}" class="topic-time-anchor">
            {{format-date topic.bumpedAt format="tiny"}}
          </a>
        </span>
        {{discourse-tags topic mode="list"}}
      </div>
    </div>
  </td>

  {{!-- 3. 오른쪽: 통계 (댓글, 조회수) --}}
  <td class="num posts-map post-count">
    <span class="number" title="{{topic.replyCount}}">{{topic.replyCount}}</span>
  </td>
  <td class="num views-count">
    <span class="number" title="{{topic.views}}">{{topic.views}}</span>
  </td>

</tr>
